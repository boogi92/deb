
@{
    ViewBag.Title = "Index";
}
@model  List<WebApplication1.Models.Menu>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <a class="thumbnail" href="/Home/list/@item.Id">
                @Html.Raw("<img src=\"data:image/jpeg;base64,"
                          + Convert.ToBase64String(item.Imeg) + "\" />")
                <div class="caption">
                    <h3>@item.Name</h3>
                </div>
            </a>
        </div>     
    }


</div>